rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check business ownership
    function isBusinessOwner(businessId) {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.business_id == businessId;
    }

    // Businesses - owners can read/write their own
    match /businesses/{businessId} {
      allow read: if isBusinessOwner(businessId);
      allow write: if isBusinessOwner(businessId);
    }

    // Conversations
    match /conversations/{conversationId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false; // Only Cloud Functions can write
    }

    // Messages
    match /messages/{messageId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Invoices
    match /invoices/{invoiceId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Daily Stats
    match /daily_stats/{statId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Social Posts
    match /scheduled_posts/{postId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Media
    match /media/{mediaId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Reviews
    match /reviews/{reviewId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if false;
    }

    // Contacts
    match /contacts/{contactId} {
      allow read: if isBusinessOwner(resource.data.business_id);
      allow write: if isBusinessOwner(resource.data.business_id);
    }

    // Users
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }
  }
}
