{
  "name": "ghostops-functions",
  "version": "1.0.0",
  "description": "GhostOps SMS AI Backend - Firebase Cloud Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "local": "npm run build && node lib/local-server.js",
    "dev": "npm run build && node lib/local-server.js"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.5.0",
    "googleapis": "^129.0.0",
    "stripe": "^14.10.0",
    "twilio": "^4.19.3"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.3.2"
  }
}
