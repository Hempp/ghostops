{
  "name": "ghostops-functions",
  "version": "1.0.0",
  "description": "GhostOps SMS AI Backend - Firebase Cloud Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.5.0",
    "googleapis": "^129.0.0",
    "stripe": "^14.10.0",
    "twilio": "^4.19.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
